{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "paths": {
      "@pw-config": ["./playwright.config"],
      "@pw/*": ["./*"]
    },
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "noImplicitAny": false,
    "types": ["node"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
